pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh ''' /usr/local/bin/docker-compose up --build --detach -f app/docker-compose.yml'''
      }
    }
    stage('test') {
      steps {
        sh 'python3 app_test.py'
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }
    }
  }
}