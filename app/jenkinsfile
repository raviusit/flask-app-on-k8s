pipeline {
  agent any
  stages {
    stage('build') {
      steps { 
        dir('app') {
                    sh ''' /usr/local/bin/docker-compose up --build --detach'''
                }
      }
    }
    stage('test') {
      steps {
        sh 'python3 app_test.py'
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }
    }
  }
}